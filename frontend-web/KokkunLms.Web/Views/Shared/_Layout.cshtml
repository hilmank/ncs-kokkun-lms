<!DOCTYPE html>
<html lang="en">
@inject IConfiguration Configuration
@inject IConfiguration Configuration

@{
    var theme = Configuration["SiteTheme"] ?? "blue";
    var themeFile = theme == "green" ? "theme-green.css" :
    theme == "orange" ? "theme-orange.css" :
    "theme.css"; // Default to blue theme
}


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KokkunLms.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/@themeFile" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <header class="header">
        <div class="text-center py-2 border-bottom">
            <marquee behavior="scroll" direction="left" scrollamount="5">
                🎓 <span style="color: var(--highlight-color);">Welcome to Kokkun LMS</span> — Empowering Education
                Through <span style="color: var(--primary-button-color);">Technology</span> 🎯
            </marquee>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footer text-center">
        <div class="container py-3">
            &copy; 2025 - <span style="color: var(--highlight-color);">Kokkun LMS</span>. All rights reserved.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
