@{
    ViewData["Title"] = "Welcome to Kokkun LMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* This is the login page for Kokkun LMS *@
@* It includes a logo, a welcome message, and a login form *@
<div class="login-container">
    <img src="/images/logo_kokkun.png" alt="Kokkun LMS Logo" class="illustration" />
    <h1>Welcome to the Kokkun LMS</h1>
    <p>Empowering students, teachers, and parents with seamless learning experiences anytime, anywhere.</p>

    <div class="login-box">
        <h2>User Login</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" asp-action="SignIn">
            <div class="input-group mb-3">
                <span class="input-group-text">
                    <i class="bi bi-person-fill"></i>
                </span>
                <input type="text" name="usernameOrEmail" class="form-control" placeholder="Username or Email"
                    required />
            </div>


            <div class="input-group mb-3">
                <span class="input-group-text">
                    <i class="bi bi-lock-fill"></i>
                </span>
                <input type="password" name="password" class="form-control" placeholder="Password" required />
            </div>

            <div class="remember-forgot mb-3">
                <label>
                    <input type="checkbox" name="rememberMe" /> Remember Me
                </label>
                <a href="#" class="text-white">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100">LOGIN</button>
        </form>
    </div>
</div>
