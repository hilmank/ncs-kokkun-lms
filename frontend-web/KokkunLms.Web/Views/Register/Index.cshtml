@{
    ViewData["Title"] = "Register Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="register-container">
    <img src="/images/logo_kokkun.png" alt="Kokkun LMS Logo" class="illustration" />
    <h1>Register Account</h1>
    <p>Complete the form to create your account.</p>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <div class="register-box">
        <form method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <h2>Parent Information</h2>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input type="text" name="ParentUsername" class="form-control" placeholder="Parent Username"
                            required />
                        <button type="button" class="btn btn-warning" onclick="searchParent()">Search</button>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input type="text" name="ParentFullName" class="form-control" placeholder="Parent Full Name"
                            required />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" name="ParentEmail" class="form-control" placeholder="Parent Email"
                            required />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                        <input type="text" name="ParentPhoneNumber" class="form-control"
                            placeholder="Parent Phone Number" required />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" name="ParentPassword" class="form-control" placeholder="Parent Password"
                            required />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input type="password" name="ParentConfirmPassword" class="form-control"
                            placeholder="Confirm Parent Password" required />
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <h2>Student Information</h2>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input type="text" name="StudentUsername" class="form-control" placeholder="Student Username"
                            required />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                        <input type="text" name="StudentFullName" class="form-control" placeholder="Student Full Name"
                            required />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input type="email" name="StudentEmail" class="form-control" placeholder="Student Email"
                            required />
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                        <input type="text" name="StudentPhoneNumber" class="form-control"
                            placeholder="Student Phone Number" required />
                    </div>

                    <!-- Gender -->
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-gender-ambiguous"></i></span>
                        <select name="StudentGender" class="form-control" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>

                    <!-- Date of Birth -->
                    <label for="StudentDateOfBirth" class="form-label">Date of Birth</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-calendar-event-fill"></i></span>
                        <input type="date" name="StudentDateOfBirth" class="form-control" required />
                    </div>

                    <!-- Upload Document (PDF) -->
                    <label for="StudentDocument" class="form-label">
                        Upload Document (PDF)
                        <button type="button" class="btn btn-sm btn-info ms-2" data-bs-toggle="modal"
                            data-bs-target="#requirementsModal">
                            <i class="bi bi-info-circle"></i>
                        </button>
                    </label>

                    <div class="input-group mb-3">
                        <span class="input-group-text" data-bs-toggle="tooltip" data-bs-placement="top"
                            title="Only PDF files are allowed.">
                            <i class="bi bi-file-earmark-pdf-fill"></i>
                        </span>
                        <input type="file" name="StudentDocument" class="form-control" accept="application/pdf"
                            required />
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">REGISTER</button>
        </form>
    </div>

    <p class="mt-3 text-white text-center">
        Already have an account? <a href="/Home/Index" class="text-warning">Login here</a>
    </p>
</div>

<!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="requirementsModal" tabindex="-1" aria-labelledby="requirementsModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content"
            style="background-color: var(--background-color); color: var(--text-color); border: 2px solid var(--highlight-color);">
            <div class="modal-header">
                <h5 class="modal-title" id="requirementsModalLabel">Document Requirements</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                    style="filter: invert(100%);"></button> <!-- Makes close button white -->
            </div>
            <div class="modal-body">
                Please upload a PDF document that includes:
                <ul>
                    <li>Studentâ€™s birth certificate</li>
                    <li>Latest academic transcript</li>
                    <li>Any supporting documents (optional)</li>
                </ul>
                <small class="text-muted" style="color: var(--highlight-color);">Maximum file size: 5 MB</small>
            </div>
            <div class="modal-footer d-flex justify-content-between w-100">
                <a href="/files/DocumentRequirements.pdf" class="btn btn-success" download>
                    <i class="bi bi-download"></i> Download Requirements
                </a>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


